@model BonusMvcStok.Models.entity.TBLMUSTERILER
@{
    ViewBag.Title = "yenimusteri";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<form method="post">
    <h2> Yeni Müşteri  Ekleme</h2>
    <br />
    <label>Müşteri Adı</label>
    @Html.TextBoxFor(m => m.ad, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.ad, "", new { @style = "color:red" })
    <br />
    <label>Soyadı</label>
    @Html.TextBoxFor(m => m.soyad, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.soyad, "", new { @style = "color:red" })
    <br />
    <label>Şehir</label>
    @Html.TextBoxFor(m => m.sehir, new { @class = "form-control" })
    <br />
    <label>Bakiye</label>
    @Html.TextBoxFor(m => m.bakiye, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">Kaydet</button>
</form>
